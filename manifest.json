{
	"name": "HR helper",
	"short_name": "HR helper",
	"version": "1.0.0",
	"description": "None",
	"permissions": [
		"activeTab",
		"https://www.linkedin.com/*",
		"storage"
	],
	"content_scripts": [
      {
        "js":         [ "content.js" ],
		"css":        [ "content.css" ],
        "matches":    [ "https://www.linkedin.com/*" ],
        "all_frames": true,
        "run_at":     "document_end"
      }
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
	"manifest_version": 2
}
